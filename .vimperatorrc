set gui=none

map h H
map l L

map j 3<C-e>
map k 3<C-y>

map ,l :subscldr -rate=5<cr>
map a  :sbm 

map <A-d>       :mr alc 
map <M-d>       :mr alc 
map <M-c>       :tabopen http://search.cpan.org/search?mode=all&query=
map <C-g>       :tabopen google 
map ,;    :moveComiketPage<cr>
map ,:    :pixivToChecklist<cr>

map <silent> v  :viewsource<cr>

set titlestring=Vimperator
set wildmode=longest,full
set complete=l
set! ui.key.generalAccessKey=0

style chrome://* .tabs-newtab-button { display: none;}

let g:plugin_loader_roots = '~/.vimperator/github/'
let g:direct_sbm_use_services_by_post = 'h'
let g:direct_sbm_use_services_by_tag  = 'h'
let g:refcontrol_enabled = 'true'
"let clock_format='[%y/%d %t]'

js <<EOT
liberator.globalVariables.refcontrol = {
  '@DEFAULT'   : '@FORGE',
  'tumblr.com' : '@FORGE',
  'fc2.com'    : '',
  'pixiv.net'  : '@NORMAL',
};

liberator.globalVariables.plugin_loader_plugins = <>
    _libly
    _smooziee
    subscldr
    feedSomeKeys_3
    matanico
    direct_bookmark
    multi_requester
    appendAnchor
    refcontrol
    loginManager
    tombloo
</>.toString().split(/\s+/).filter(function(n) n);
EOT

"map ,@ :pixivToEvernote<cr>
autocmd DOMLoad,LocationChange 'www\.pixiv\.net/member_illust\.php\?mode=medium' :performPixivImageSave<cr>

autocmd LocationChange .* :fmapc
autocmd LocationChange 'reader\.livedoor\.com/reader' :fmap j k s a p o v c r q w <Space> <S-Space> Z z ZZ b < >
autocmd DOMLoad 'reader\.livedoor\.com/reader' :js setTimeout(function() liberator.execute('normal ZZ'), 500)
